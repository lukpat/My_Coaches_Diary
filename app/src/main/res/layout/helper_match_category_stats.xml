<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        app:cardCornerRadius="@dimen/round_corner"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/colorPrimary"
        app:strokeWidth="1.5dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/league"
                style="@style/TextAppearance.MaterialComponents.Headline5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textColor="@color/colorGrey"
                app:layout_constraintEnd_toStartOf="@id/column2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/half_normal_margin"
                android:ellipsize="end"
                android:text="@string/league"
                android:textColor="@color/colorGrey"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/league"
                app:layout_constraintStart_toStartOf="@+id/league"
                app:layout_constraintTop_toBottomOf="@+id/league" />

            <TextView
                android:id="@+id/column2"
                style="@style/TextAppearance.MaterialComponents.Headline5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="|"
                android:textColor="@color/colorGrey"
                app:layout_constraintEnd_toStartOf="@id/tournament"
                app:layout_constraintStart_toEndOf="@+id/league"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tournament"
                style="@style/TextAppearance.MaterialComponents.Headline5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textColor="@color/colorGrey"
                app:layout_constraintEnd_toStartOf="@+id/column1"
                app:layout_constraintStart_toEndOf="@+id/column2"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/half_normal_margin"
                android:ellipsize="end"
                android:text="@string/tournament"
                android:textColor="@color/colorGrey"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/tournament"
                app:layout_constraintStart_toStartOf="@+id/tournament"
                app:layout_constraintTop_toBottomOf="@+id/tournament" />


            <TextView
                android:id="@+id/column1"
                style="@style/TextAppearance.MaterialComponents.Headline5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="|"
                android:textColor="@color/colorGrey"
                app:layout_constraintEnd_toStartOf="@id/friendly"
                app:layout_constraintStart_toEndOf="@+id/tournament"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/friendly"
                style="@style/TextAppearance.MaterialComponents.Headline5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textColor="@color/colorGrey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/column1"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/half_normal_margin"
                android:ellipsize="end"
                android:text="@string/friendly"
                android:textColor="@color/colorGrey"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/friendly"
                app:layout_constraintStart_toStartOf="@+id/friendly"
                app:layout_constraintTop_toBottomOf="@+id/friendly" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>