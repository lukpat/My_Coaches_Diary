<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="cz.lpatak.mycoachesdiary.data.model.Result" />

        <variable
            name="result"
            type="Result" />

        <variable
            name="filterOn"
            type="Boolean" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.exercises.ExerciseLibraryFragment">

        <Spinner
            android:id="@+id/exerciseOwner"
            invisibleUnless="@{filterOn}"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:entries="@array/exercise_owner"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="16dp" />

        <Spinner
            android:id="@+id/category"
            invisibleUnless="@{filterOn}"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:entries="@array/exercise_category"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            app:layout_constraintTop_toBottomOf="@+id/exerciseOwner" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSetFilter"
            style="@style/buttonBoldFilled"
            invisibleUnless="@{filterOn}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="@string/apply_filter"
            app:layout_constraintEnd_toEndOf="@+id/category"
            app:layout_constraintStart_toStartOf="@+id/category"
            app:layout_constraintTop_toBottomOf="@+id/category" />

        <ScrollView
            android:id="@+id/scrollView2"
            invisibleUnless="@{!filterOn}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            app:layout_constraintTop_toTopOf="@+id/exerciseOwner"
            tools:layout_editor_absoluteX="5dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/exercises_list"
                goneUnless="@{result instanceof Result.Success}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="LinearLayoutManager"
                tools:listitem="@layout/exercise_item" />

        </ScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_add_exercise"
            style="@style/AppTheme.FloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:contentDescription="@string/add_exercise"
            android:focusable="true"
            android:src="@drawable/ic_add"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>